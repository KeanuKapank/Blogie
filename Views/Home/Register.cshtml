@{
    Layout = "";
}

@model Blogie.Auth.Models.Register

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body class="d-flex flex-column justify-content-center align-items-center vh-100">
    <div id="SignInPage" class="d-flex flex-column justify-content-start align-content-start">
        <h1 class="heading">Sign Up</h1>
        <form asp-action="Register" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <input type="text" placeholder="First Name" class="d-block my-2 w-100 inputField" asp-for="FirstName">
            <input type="text" placeholder="Last Name" class="d-block my-2 w-100 inputField" asp-for="LastName">
            <input type="text" placeholder="Username" class="d-block my-2 w-100 inputField" asp-for="Username">
            <input type="email" placeholder="Email" class="d-block my-2 w-100 inputField" asp-for="Email">
            <select name="Gender" asp-for="Gender">
                <option value="">Select an Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <input type="date" class="d-block my-2 w-100 inputField" asp-for="DateOfBirth">
            <input type="text" placeholder="From which Country are you" class="d-block my-2 w-100 inputField" asp-for="Country">
            <label for="avatar">Profile Photo</label>
            <input type="file" class="d-block my-2 w-100 inputField" asp-for="Avatar" name="file">
            <input type="password" placeholder="Create Password" class="d-block my-2 w-100 inputField" asp-for="Password">
            <input type="password" placeholder="Confirm Password" class="d-block my-2 w-100 inputField" asp-for="RepeatPassword">
            <input type="submit" value="Sign Up">
        </form>
        <p>Already have an Account<a asp-action="Login">Sign In</a></p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
</body>
</html>
